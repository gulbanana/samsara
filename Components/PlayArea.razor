@code {
    [Parameter] public Game State { get; set; }
}

<ResponsivePanes>
    <MainContent>
        @if (!State.Alive)
        {
            <Column Gutter="2em">
                <div class="life">You are a unborn soul, without direction or purpose.</div>
                <ActButton FontSize="2" OnClick="State.DoLive">LIVE</ActButton>
            </Column>        
        }
        else
        {
            <Column Gutter="2em">
                <div class="life">You are a mayfly, <span class="trait">brief</span> and <span class="trait">desperate</span>.</div>
                <Row Gutter="15">
                    <ActButton FontSize="1.5" OnClick="State.DoMate">MATE</ActButton>
                    <ActButton FontSize="1.5" OnClick="State.DoDie">DIE</ActButton>
                </Row>
                <progress style="width: 100%" max="20" value="@(State.LifeSpan.TotalSeconds)"></progress>
            </Column>
        }
    </MainContent>

    <FirstPane>
        @if (State.Eggs > 0)
        {
            <span class="stat">Eggs: @(State.Eggs)</span>
        }
    </FirstPane>

    <SecondPane>
        <Row Gutter="15">
            @if (State.Karma > 0)
            {
                <span class="stat">Karma: @(State.Karma)</span>
            }

            @if (State.Rebirths > 0)
            {
                <span class="stat">Rebirths: @(State.Rebirths)</span>
            }
        </Row>
    </SecondPane>
</ResponsivePanes>